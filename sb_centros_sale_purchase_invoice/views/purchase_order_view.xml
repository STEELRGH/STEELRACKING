<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- ModificaciÃ³n de la vista de Compras -->
        <record id="view_purchase_order_form_inherit_centro" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.centros</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="centro_id" readonly="state in ('sent','purchase','done','cancel')" options="{'no_create': True, 'no_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record id="view_purchase_order_tree_inherit_centros" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit.centros</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="centro_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>