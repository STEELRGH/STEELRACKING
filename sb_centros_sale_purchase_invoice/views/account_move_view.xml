<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Modificación de la vista de formulario de facturas -->
        <record id="view_move_form_inherit_centros" model="ir.ui.view">
            <field name="name">account.move.form.inherit.centros</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="centro_id" readonly="state in ('posted','cancel')"/>
                </xpath>

                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="exchange_rate"/>
                </xpath>
                
            </field>
        </record>

        <!-- Modificación de la vista de árbol de facturas -->
        <record id="view_move_tree_inherit_centro" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.centro</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="invoice_date" position="after">
                    <field name="centro_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>