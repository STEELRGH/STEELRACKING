<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- ModificaciÃ³n de la vista de Ventas -->
        <record id="view_order_form_inherit_centros" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.centros</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="centro_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_tree_inherit_centros" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.centro</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="centro_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>