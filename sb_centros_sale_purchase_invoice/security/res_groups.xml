<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <record model="ir.module.category" id="module_centros_management">
        <field name="name">Centros</field>
        <field name="sequence">12</field>
    </record>

    <record id="group_centros_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_centros_management"/>
    </record>

    <record id="group_centros_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_centros_management"/>
        <field name="implied_ids" eval="[(4, ref('group_centros_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
  
    
    <record id="postal_centros_multicompany" model="ir.rule">
        <field name="name">Centros Multi-company</field>
        <field name="model_id" ref="model_centros"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
</data>
</odoo>
