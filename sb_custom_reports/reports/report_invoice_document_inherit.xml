        <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>

        <div class="row address_2" style="padding-top:30px;">
            <div class="col-5">
              <div t-field="o.partner_id" t-options-widget="'contact'" t-options-separator="&quot;,&quot;" t-options-fields="['vat', 'name', 'address']" class="text-black-75 o_bold h6"/>
