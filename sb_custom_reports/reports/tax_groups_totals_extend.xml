<odoo>
    <data>
        <template id="tax_groups_totals_extend" inherit_id="account.tax_groups_totals">
            <xpath expr="/t[@t-name='account.tax_groups_totals']" position="replace">

                <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                  <t t-set="display_tax_base" t-value="tax_totals['display_tax_base']"/>
                  <tr style="border: none !important;">
                    <t t-if="not display_tax_base">
                      <td class="text-start not_margin_td" style="padding: 0px 0px 0px 5px; width:30%; border: 0;">
                        <span class="text-nowrap fw-bold" t-out="amount_by_group['tax_group_name']">IVA 15%</span>
                      </td>
                      <td class="text-end o_price_total not_margin_td" style="padding: 0px 5px 0px 0px; width:40%; border: 0;">
                        <span class="text-nowrap fw-bold" t-out="amount_by_group['formatted_tax_group_amount']">1.05</span>
                      </td>
                    </t>
                    <t t-else="">
                      <td class="text-start not_margin_td" style="width:30%;">
                        <span t-out="amount_by_group['tax_group_name']">IVA 15%</span>
                                         on 
                                        <span class="text-nowrap" t-out="amount_by_group['formatted_tax_group_base_amount']">27.00</span>
                      </td>
                      <td style="width:40%;" class="text-end o_price_total not_margin_td">
                        <span class="text-nowrap" t-out="amount_by_group['formatted_tax_group_amount']">4.05</span>
                      </td>
                    </t>
                  </tr>
                </t>
              </xpath>
        </template>
    </data>
</odoo>